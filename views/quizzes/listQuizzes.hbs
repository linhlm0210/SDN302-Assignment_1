<div class="wrap">
  <h1 class="text-center">Quizzes list</h1><br />
  <div class="d-grid gap-2 col-6 mx-auto">
    <button class="btn btn-outline-success" type="button">
      <a class="link-success" href="/quizzes/create" style="text-decoration:none;">
        Add quiz
      </a>
    </button>
  </div>

  <div class="quiz-list">
    {{#each quiz}}
      <div class="card border-secondary mb-3" style="margin: 20px">
        <div class="card-header fw-bold d-flex justify-content-between">
          <a class="link-secondary" style="text-decoration:none;" href="/quizzes/{{this._id}}/populate">
            {{this.title}}
          </a>
          <!-- Update and Delete icons -->
          <div>
            <!-- Update quiz icon -->
            <a href="/quizzes/{{this._id}}/update" class="btn btn-outline-primary btn-sm" title="Update quiz">
              <i class="fas fa-edit"></i>
            </a>
            <!-- Delete quiz icon -->
            <form action="/quizzes/{{this._id}}/delete" method="POST" style="display:inline;">
              <button class="btn btn-outline-danger btn-sm" type="submit" title="Delete quiz" onclick="return confirm('Are you sure you want to delete this quiz?');">
                <i class="fas fa-trash-alt"></i>
              </button>
            </form>
          </div>
        </div>
        <div class="card-body text-secondary">
          <p class="card-text">{{this.description}}</p>
        </div>
      </div>
    {{/each}}
  </div>
</div>
